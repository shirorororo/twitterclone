<p id="notice"><%= notice %></p>
<div class="container">
  <h1>つぶやき一覧</h1>
  <ul class="row">
    <% @posts.each do |post| %>
    <li class="col-sm-6 col-md-6"><%= post.content %><br><p id="time"><%= post.created_at.strftime("%Y-%m-%d-%H:%M")  %></p></li> 
    <li class="col-sm-6 col-md-4"><%= link_to '編集', edit_post_path(post), class: 'btn btn-info' %>　　　<%= link_to '削除', post, method: :delete, data: { confirm: '削除してもよろしいでしょうか?' }, class: 'btn btn-danger' %></li> 
    <% end %>
  </ul>
</div>